      "unzip /usr/local/tomcat/apache-tomcat-8.5.35-windows-x64.zip -d temp_for_zip_extract"
      "cp ./target/packer.war /usr/local/tomcat/webapps/packer.war"
      "CMD /usr/local/tomcat/bin/startup.sh && /bin/bash"
,

      "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
  }]
